  <body>
    <!-- @import "header.html" -->

    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <div class="bread__crumbs">
            <a class="bread__crumbs__link" href="index.html">Главная</a>
            <img
              class="bread__crumbs__arrow"
              src="img/about_us_page/icons/arrow-right.svg"
              alt=""
            />
            <a class="bread__crumbs__link current" href="#">Контакты</a>
          </div>
        </div>
      </div>
    </div>

    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <div class="contacts_page">
            <div class="contacts__page__block">
              <div class="contacts__page__block__left">
                <h3 class="title">Контакты</h3>
                <div class="contacts__page__block__left__info">
                  <div class="contacts__page__block__left__info__item">
                    <img
                      class="img"
                      src="img/contacts_page/icons/location.svg"
                      alt=""
                    />
                    <div class="text">
                      <p class="light">Почтовый адрес</p>
                      <div class="dark">
                        г.Алматы, мкр. Акжар,ул. Айманова, 34
                      </div>
                    </div>
                  </div>
                  <div class="contacts__page__block__left__info__item">
                    <img
                      class="img"
                      src="img/contacts_page/icons/tel.svg"
                      alt=""
                    />
                    <div class="text">
                      <p class="light">Телефон</p>
                      <div class="dark">+7 (727) 360-37-72</div>
                    </div>
                  </div>
                  <div class="contacts__page__block__left__info__item">
                    <img
                      class="img"
                      src="img/contacts_page/icons/mail.svg"
                      alt=""
                    />
                    <div class="text">
                      <p class="light">Электронная почта</p>
                      <div class="dark">aksham@mail.ru</div>
                    </div>
                  </div>
                </div>
              </div>
              <div class="contacts__page__block__right">
                <div class="contacts__page__block__right__map">
                  <div id="map"></div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

